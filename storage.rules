rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Deal documents: staff can read/write, linked clients can read and upload
    match /deals/{spzn}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.token.role == 'lawyer' ||
         request.auth.token.role == 'assistant' ||
         request.auth.token.role == 'client');
    }
  }
}
